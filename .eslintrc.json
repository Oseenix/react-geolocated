{
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:prettier/recommended"
    ],
    "env": {
        "browser": true,
        "node": true,
        "jasmine": true
    },
    "globals": {
        "jest": false
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "ignorePatterns": "demo"
}
